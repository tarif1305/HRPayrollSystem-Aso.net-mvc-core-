<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRPayrollSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRPayrollSystem.styles.css" asp-append-version="true" />

    <style>
        body.dark-mode {
            background-color: #212529;
            color: #f8f9fa;
        }

            body.dark-mode .navbar {
                background-color: #343a40 !important;
            }

                body.dark-mode .navbar .nav-link,
                body.dark-mode .navbar .navbar-brand {
                    color: #f8f9fa !important;
                }

            body.dark-mode footer {
                background-color: #2e3338;
                color: #f8f9fa;
            }

        footer {
            background-color: #f8f9fa;
            padding: 15px;
            border-top: 1px solid #dee2e6;
        }

        .content-wrapper {
            padding: 20px;
            min-height: calc(100vh - 120px);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-building"></i> HRPayroll
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Employee" asp-action="Index"><i class="bi bi-people"></i> Employees</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Department" asp-action="Index"><i class="bi bi-diagram-3"></i> Departments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Position" asp-action="Index"><i class="bi bi-briefcase"></i> Positions</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Attendance" asp-action="Index"><i class="bi bi-calendar-check"></i> Attendance</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="Index"><i class="bi bi-calendar-x"></i> Leave</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Payroll" asp-action="Index"><i class="bi bi-cash-stack"></i> Payroll</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock"></i> Privacy</a></li>
                    </ul>

                    <div class="form-check form-switch ms-2">
                        <input class="form-check-input" type="checkbox" id="darkSwitch" onchange="toggleDarkMode()" />
                        <label class="form-check-label" for="darkSwitch">Dark Mode</label>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="content-wrapper container-fluid">
        @RenderBody()
    </div>

    <footer class="text-center text-muted">
        &copy; 2025 - HRPayrollSystem - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
